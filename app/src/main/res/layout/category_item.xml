<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_gravity="center_vertical"
        android:layout_height="115dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:orientation="vertical">


        <TextView
            android:ellipsize="end"
            android:id="@+id/newsTitle"
            android:textColor="@color/colorSecondaryTextDefaultMaterialLight"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:text="«Коритиба» - «Боа»: ждать ли забитых голов от хозяев?" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/newsPreview"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:maxLines="3"
            android:textSize="14sp"
            tools:text="«Коритиба» находится в середине таблицы, но еще сохраняет шансы на место в первой четверке. Смогут ли хозяева обыграть «Боа» и приблизиться к цели? Наш прогноз даст ответ."
            tools:ignore="NestedWeights" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/newsСoefficient"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:maxLines="1"
            android:textColor="@color/deepOrange300"
            android:textSize="14sp"
            android:textStyle="italic"
            tools:text="2.35 Коэффициент" />


        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginBottom="4dp">

            <TextView
                android:ellipsize="end"
                android:id="@+id/newsTime"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="Время: Завтра в 01:15 МСК" />

            <TextView
                android:ellipsize="end"
                android:id="@+id/newsPlace"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:maxLines="1"
                android:textColor="@color/deepOrange400"
                android:textSize="12sp"
                tools:text="Турнир: Серия B" />
        </LinearLayout>

        <View style="@style/Divider" />

    </LinearLayout>

</LinearLayout>
